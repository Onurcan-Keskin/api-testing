<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.HomeFragment">

    <TextView
        android:id="@+id/textViewTopRated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="18dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="25dp"
        android:text="Top Rated"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/top_rated_recycler_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewPopular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="18dp"
        android:layout_marginStart="5dp"
        android:text="Popular"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/popular_recycler_view"
        app:layout_constraintStart_toStartOf="@+id/popular_recycler_view"
        app:layout_constraintTop_toBottomOf="@+id/top_rated_recycler_view" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/top_rated_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:orientation="horizontal"
        android:layout_marginBottom="22dp"
        tools:listitem="@layout/item_movies"
        tools:itemCount="3"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/textViewPopular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTopRated" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/popular_recycler_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="2dp"
        android:layout_marginEnd="1dp"
        android:layout_marginStart="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewPopular"
        tools:listitem="@layout/item_card"/>


</androidx.constraintlayout.widget.ConstraintLayout>